{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build debug",
			"type": "shell",
			"command": "cargo",
			"args": ["build"],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build"
		},
		{
			"label": "build release",
			"type": "shell",
			"command": "cargo",
			"args": ["build", "--release"],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build"
		},
		{
			"label": "package",
			"type": "shell",
			"options": {
				"shell": {
					"executable": "powershell.exe",
					"args": ["-NoLogo"]
				}
			},
			"command": "${workspaceFolder}/package.ps1",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build"
		}
	]
}